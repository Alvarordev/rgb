---
import TextSwipe from "./TextSwipe.astro";
---

<header class="absolute top-0 z-50 w-full px-7">
  <div class="text-[#fcfcfc] flex w-full justify-between mt-8 items-center">
    <div class="flex items-center gap-4">
      <img src="/src/assets/rgb-logo-white.png" alt="rgb-logo" class="w-32" />
    </div>

    <ul class="flex text-sm gap-4 font-bold items-center uppercase">
      <li>
        <TextSwipe
          class="tracking-tighter leading-[0.85]"
          class2="text-red-500"
        >
          <Fragment slot="text1">Proyectos</Fragment>
        </TextSwipe>
      </li>
      <li>
        <TextSwipe
          class="tracking-tighter leading-[0.85]"
          class2="text-green-500"
        >
          <Fragment slot="text1">Nosotros</Fragment>
        </TextSwipe>
      </li>
      <li>
        <TextSwipe
          class="tracking-tighter leading-[0.85]"
          class2="text-blue-500"
        >
          <Fragment slot="text1">Contacto</Fragment>
        </TextSwipe>
      </li>
    </ul>

    <button
      class="group bg-[#fcfcfc] h-12 px-6 rounded-full cursor-pointer flex items-center"
    >
      <TextSwipe
        class="font-bold tracking-tighter leading-[0.85] text-sm text-[#151515]"
      >
        <Fragment slot="text1">CONTACTANOS  </Fragment>
      </TextSwipe>
    </button>
  </div>
</header>
