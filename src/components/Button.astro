---
import TextSwipe from "./TextSwipe.astro";

interface Props {
  id?: string;
  class?: string;
  text1: string;
  text2?: string;
  textSwipeClass?: string;
  href?: string;
}

const {
  id,
  class: className,
  text1,
  text2,
  textSwipeClass,
  href,
} = Astro.props;

const Element = href ? "a" : "button";
---

<Element
  id={id}
  href={href}
  class:list={[
    "group h-12 px-6 rounded-full cursor-pointer flex items-center",
    className,
  ]}
>
  <TextSwipe class:list={[textSwipeClass]}>
    <Fragment slot="text1">{text1}</Fragment>
    <Fragment slot="text2">{text2 || text1}</Fragment>
  </TextSwipe>
</Element>
